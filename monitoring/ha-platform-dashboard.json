{
  "dashboard": {
    "title": "üá∏üá¶ Saudi Arabia HA Platform - Monitoring",
    "tags": ["ha-platform", "kubernetes", "saudi"],
    "timezone": "browser",
    "editable": true,
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
        "type": "stat",
        "title": "Cluster Status",
        "targets": [{
          "expr": "up{job=\"kubernetes-nodes\"}",
          "legendFormat": "Node Status"
        }],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [{
              "type": "value",
              "options": {
                "1": {"text": "‚úÖ Online", "color": "green"},
                "0": {"text": "‚ùå Offline", "color": "red"}
              }
            }]
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
        "type": "stat",
        "title": "Total Pods",
        "targets": [{
          "expr": "count(kube_pod_info{namespace=\"default\"})",
          "legendFormat": "Pods"
        }],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
        "type": "stat",
        "title": "Demo App Pods",
        "targets": [{
          "expr": "count(kube_pod_info{namespace=\"default\", pod=~\"demo-app.*\"})",
          "legendFormat": "Demo App"
        }],
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "type": "graph",
        "title": "CPU Usage by Pod",
        "targets": [{
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"demo-app.*\", container!=\"\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }],
        "yaxes": [{
          "format": "percentunit",
          "label": "CPU"
        }]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "type": "graph",
        "title": "Memory Usage by Pod",
        "targets": [{
          "expr": "sum(container_memory_working_set_bytes{namespace=\"default\", pod=~\"demo-app.*\", container!=\"\"}) by (pod)",
          "legendFormat": "{{pod}}"
        }],
        "yaxes": [{
          "format": "bytes",
          "label": "Memory"
        }]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "type": "graph",
        "title": "Network Received (Bytes/sec)",
        "targets": [{
          "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"default\", pod=~\"demo-app.*\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }],
        "yaxes": [{
          "format": "Bps",
          "label": "Bytes/sec"
        }]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "type": "graph",
        "title": "Network Transmitted (Bytes/sec)",
        "targets": [{
          "expr": "sum(rate(container_network_transmit_bytes_total{namespace=\"default\", pod=~\"demo-app.*\"}[5m])) by (pod)",
          "legendFormat": "{{pod}}"
        }],
        "yaxes": [{
          "format": "Bps",
          "label": "Bytes/sec"
        }]
      },
      {
        "id": 8,
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 22},
        "type": "table",
        "title": "Pod Status",
        "targets": [{
          "expr": "kube_pod_status_phase{namespace=\"default\", pod=~\"demo-app.*\"}",
          "format": "table",
          "instant": true
        }],
        "transformations": [{
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "job": true,
              "instance": true,
              "namespace": true
            },
            "renameByName": {
              "pod": "Pod Name",
              "phase": "Status",
              "Value": "State"
            }
          }
        }]
      }
    ],
    "refresh": "10s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"]
    },
    "version": 1
  }
}
